<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/col_title_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/act_search_exit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="9dp"
            android:src="@mipmap/img_exit"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/search_shape"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@mipmap/souoshuo" />

            </LinearLayout>


            <EditText
                android:id="@+id/searchEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/string_search_hint"
                android:singleLine="true"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="12.5sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:layout_weight="5"
            android:background="@drawable/search_shape"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/search"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/doSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            android:visibility="visible"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6D7DC"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="center"
        android:text="热门搜索："
        android:textColor="#f99e32"
        android:textSize="13sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/hotOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_tag"
            android:button="@null"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="12sp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/hotTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_tag"
            android:button="@null"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="12sp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/hotThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_tag"
            android:button="@null"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/hotFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_tag"
            android:button="@null"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="12sp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/hotFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_tag"
            android:button="@null"
            android:gravity="center"
            android:maxLength="8"
            android:textSize="12sp"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/hotSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_tag"
            android:button="@null"
            android:gravity="center"
            android:maxLength="8"
            android:paddingLeft="14dp"
            android:textSize="12sp"
            android:visibility="invisible" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginTop="10dp"
        android:background="#F4F4F4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:text="历史搜索："
            android:textColor="#333333"
            android:textSize="13sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/act_search_delete_history"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/img_history_delete"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D6D7DC"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.bibinet.biunion.project.ui.custom.HistoryTagShowView
            android:id="@+id/act_search_history_tag"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"></com.bibinet.biunion.project.ui.custom.HistoryTagShowView>

        <TextView
            android:id="@+id/act_search_not_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="暂无历史搜索记录"
            android:textColor="#333333"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>